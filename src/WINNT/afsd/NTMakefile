clean::
	$(DEL) $(OUT)\*.res
	$(DEL) afsrpc.h
	$(DEL) afsrpc_?.*
        $(DEL) afsd_eventmessages.h
	$(DEL) $(CONF_DLLFILE)
	$(DEL) $(LOGON_DLLFILE)
	$(DEL) $(LOG95_DLLFILE)

mkdir:
