DESTDIR=@DESTDIR@
SRCDIR=@SRCDIR@
TOP_SRCDIR=@TOP_SRCDIR@
SYS_NAME=@AFS_SYSNAME@
SHELL = /bin/sh

include ../config/Makefile.${SYS_NAME}

CFLAGS = -I${TOP_SRCDIR}/config -I${SRCDIR}/include ${XCFLAGS}

all: install

#
# Build targets
#
libusd.a: usd_file.o AFS_component_version_number.o
	$(RM) -f $@
	$(AR) crv $@ usd_file.o AFS_component_version_number.o
	$(RANLIB) $@

usd_file.o: usd_file.c usd.h

#
# Installation targets
#
install: \
	${DESTDIR}/lib/afs/libusd.a \
	${DESTDIR}/include/afs/usd.h

${DESTDIR}/lib/afs/libusd.a: libusd.a
	${INSTALL} $? $@

${DESTDIR}/include/afs/usd.h: usd.h
	${INSTALL} $? $@

#
# Misc. targets
#
clean:
	$(RM) -f *.o libusd.a core AFS_component_version_number.c

include ../config/Makefile.version
